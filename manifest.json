{
  "name": "SiteBlocker",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Very simple website blocker for personal use.",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/contentScript.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "*://*/*",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking"
  ]
}
   
